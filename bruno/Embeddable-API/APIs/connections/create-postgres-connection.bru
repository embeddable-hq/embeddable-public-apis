meta {
  name: Create postgres connection
  type: http
  seq: 5
}

post {
  url: {{host}}/api/v1/connections
  body: json
  auth: inherit
}

body:json {
  {
    "name": "my-connection",
    "type": "postgres", // Database type
    "credentials": {
        "host": "host",
        "database": "db",
        "user": "user",
        "password": "pass",
        "port": 5432, // optional, number
        "ssl": true // optional, boolean
    }
  }
}

settings {
  encodeUrl: true
}
